@model AspNote.Models.User
<h2>Login</h2>

<form class="form-horizontal" method="post" asp-controller="Account" asp-action="Login">
    <div class="form-group">
        <label>UserId</label>
        <input type="text" asp-for="UserId" class="form-control" placeholder="Insert UserId"/>
        <span class="text-danger" asp-validation-for="UserId"></span>
    </div>
    <div class="form-group">
        <label>UserPassword</label>
        <input type="password" asp-for="UserPassword" class="form-control" placeholder="Insert Password"/>
        <span class="text-danger" asp-validation-for="UserPassword"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Login</button>
    </div>
</form>
